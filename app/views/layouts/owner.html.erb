<!DOCTYPE html>
<html>
  <head>
    <title>OwnerHelper</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag 'application' %>
    <%= stylesheet_link_tag "owners", media: "all" %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <h1><%= link_to "iRent", owner_path %></h1>
      <% if @owner.present? && !@owner.new_record? %>
      <div class="header-right">
      <ul class="header-menu">
      　　<li><%= link_to "入居人検索", owner_residents_path %></li>
          <li><%= link_to "入居申請(#{@request_count}件)", owner_requests_path %></li>
        <li class="header-pull-list-parent">
          <%= @owner.name %><i class="fas fa-angle-down"></i>
          <ul class="header-pull-list">
            <li><%= link_to "ログアウト", destroy_owner_session_path, method: "delete" %></li>
            <li><%= link_to "管理人情報の変更", ""  %></li>
          </ul>
        </li>
      </ul>
      </div>
      <% end %>
    </header>
      <%= yield %>
  </body>
</html>