<%= stylesheet_link_tag "residents/edit", :media => "all" %>
<main>
  <h2><%= t('.inquiry') %></h2>

  <%= form_for(@inquiry, url: resident_inquiries_path, method: "post") do |f| %>
    <div class="field long-field">
      <%= label_tag "email", t('.email') %>
      <%= f.text_field "email" %>
    </div>

    <div class="field long-field">
      <%= label_tag "post_mail_setting", t('.category') %>
      <div class="radio_buttons">
        <% Inquiry.categories_i18n.map do |k, v| %>
          <p>
            <span class="radio-label"><%= v %></span>
            <%= f.radio_button "category", k, {} %>
          </p>
        <% end %>
      </div>
    </div>

    <div class="field long-field">
      <%= label_tag "text", t('.text') %>
      <%= f.text_area "text" %>
    </div>

    <div class="actions">
      <%= f.button t('.submit') , class: "button"%>
    </div>
  <% end %>
</main>