<%= stylesheet_link_tag "owners/registrations/new", :media => "all" %>
<%= javascript_include_tag 'owners/registrations/new', 'data-turbolinks-track': 'reload' %>
<main>
  <div class="main-right">
    <h2>新規管理人登録</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      <div class="field">
        <div>
          <%= f.label :name, "名前" %>
        </div>
        <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
      </div>
    
      <div class="field">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autocomplete: "email" %>
      </div>
    
      <div class="field">
        <%= f.label :password, "パスワード" %>
        <% if @minimum_password_length %>
        (半角英数<%= @minimum_password_length %> 文字以上)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
    
      <div class="field">
        <%= f.label :password_confirmation, "パスワードをもう一度入力してください" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      <% resource.invitation_code = resource.get_invitation_code %>
      <%= f.hidden_field :invitation_code%>
      
      
      <div class="field actions">
        <%= label_tag "", "招待コード(入力された場合は必ずチェックを押してください)" %></br >
        <span id="invitation-owner-name"></span></br>
        <%= text_field_tag "invitation_owner_code", "",class: "short" %>
        <%= button_tag "チェック", type: "button", class: "button", id: "invitation_check" %>
      </div>
      <%= f.hidden_field :invitation_owner_id %>
      
      <div class="actions right">
        <%= f.button "登録", class: "button submit" %>
      </div>
    <% end %>
  </div>
</main>